{% extends 'base.html.twig' %}

{% block title %} Mes réservations {% endblock %}

{% block body %}

    <div class="container">
        <h1>Mes réservations</h1>
        <div class="alert alert-dark text-center mt-5">
            <p class="m-0">Retrouvez toutes vos réservations passées et à venir</p>
        </div>

        {% for booking in app.user.bookings %}
            {% set ad = booking.ad %}
            <div class="row my-5">
                <div class="col-4">
                    <img src="{{ ad.image }}" alt="{{ ad.title }}" class="img-fluid">
                </div>
                <div class="col-8">
                    <h4>{{ ad.title }}</h4>
                    <p>
                        Réservation <strong>n°{{ booking.id }}</strong> • {{ booking.amount }} &euro;<br>
                        Du {{ booking.startDate | date('d/m/Y') }} au {{ booking.endDate | date('d/m/Y') }}<br>
                    </p>
                    <a href="{{ path('booking.show', {'id': booking.id}) }}" class="btn btn-info">Voir le détail de ma réservation</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}